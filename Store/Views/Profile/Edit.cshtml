@model Product
@{
    ViewData["Title"] = "Edytuj";
}

    <form asp-action="Update">
        <div class="form-group">
            <label for="exampleFormControlInput1">Nazwa</label>
            <input type="text" value="@Model.Name" class="form-control" asp-for="Name"/>
        </div>
        <div class="form-group">
            <label for="exampleFormControlInput1">Cena</label>
            <input type="number" value="@Model.Price"  class="form-control"  asp-for="Price"/>
        </div>
        <td><input type="submit" class="btn btn-primary" value="Edytuj" onclick="location.href='@Url.Action("Update", "Profile",Model)'" /></td>
    </form>
@section Scripts{ 
@{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
